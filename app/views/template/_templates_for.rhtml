<% for template in @op_templates do -%>
  <div class="list_item">
    <div class="actions">
      <%= link_to("edit", :action => 'edit', :id => template) %>
      <%= link_to("delete", {:action => 'destroy', :id => template},
                  :confirm => 'Are you sure you want to delete this template?') %>
      <%= link_to("use", :action => 'use', :id => template) %>
    </div>
    <%= template.operation %>
  </div>
<% end -%>